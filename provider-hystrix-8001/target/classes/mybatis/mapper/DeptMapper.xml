<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luxiaobu.springcloud.dao.DeptDao">
    
    <resultMap id="DeptMap" type="Dept">
        <id column="dept_no" property="deptNo"/>
        <result column="d_name" property="dName"/>
        <result column="db_source" property="dbSource"/>
    </resultMap>

    <insert id="addDept" parameterType="Dept">
        insert into dept (d_name, db_source)
        values (#{dName}, database())
    </insert>

    <select id="queryById" parameterType="Long" resultMap="DeptMap">
        select * from dept where dept_no = #{deptNo}
    </select>

    <select id="queryAll" resultMap="DeptMap">
        select * from dept
    </select>
</mapper>